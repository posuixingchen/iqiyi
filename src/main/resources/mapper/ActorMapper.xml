<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zjc.mapper.ActorMapper">

    <resultMap id="actorMap" type="com.zjc.pojo.Actor">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="birthday" column="birthday"/>
        <result property="sex" column="sex"/>
        <result property="description" column="description"/>
        <result property="pic" column="pic"/>

        <collection property="regions" ofType="com.zjc.pojo.Region">
            <id property="id" column="rid"/>
            <result property="name" column="rname"/>
        </collection>
    </resultMap>

    <select id="findActor" resultMap="actorMap">
        select actor.*,
               region.id   rid,
               region.name rname
        from actor
                 inner join actor_region on actor.id = actor_region.actorid
                 inner join region on actor_region.regionid = region.id
    </select>

</mapper>